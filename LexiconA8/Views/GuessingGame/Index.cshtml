@{
    ViewData["Title"] = "Index";
}

<h1>@ViewBag.Heading</h1>

<form asp-controller="GuessingGame" asp-action="Index" method="post">
    <div>
        <input type="text" name="newGuess" value="@ViewBag.Guess">
        <label for="guess">Enter a guess</label>
    </div>
    <div>
        <input type="submit" id="submit" value="Guess!">
    </div>
</form>


@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
